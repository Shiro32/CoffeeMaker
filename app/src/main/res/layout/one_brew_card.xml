<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardColor"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/oneBrewDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="2020年4月1日 10時00分"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/oneBrewMethodLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/oneBrewMethodLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oneBrewRatingLabel" />

        <TextView
            android:id="@+id/oneBrewBeansLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/oneBrewBeanLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oneBrewMethodLabel" />

        <TextView
            android:id="@+id/oneBrewBeansKindText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ブルーマウンテンなどなど"
            app:layout_constraintBaseline_toBaselineOf="@+id/oneBrewBeansLabel"
            app:layout_constraintEnd_toStartOf="@+id/oneBrewBeansPassText"
            app:layout_constraintStart_toEndOf="@+id/oneBrewBeansLabel"
            app:layout_constraintStart_toStartOf="@+id/oneBrewMethodText" />

        <TextView
            android:id="@+id/oneBrewBeansPassText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="7日経過"
            app:layout_constraintBaseline_toBaselineOf="@+id/oneBrewBeansKindText"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/oneBrewGrindLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/oneBrewGrind"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oneBrewBeansLabel" />

        <SeekBar
            android:id="@+id/oneBrewBeansGrindBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:max="5"
            android:progress="3"
            app:layout_constraintBottom_toBottomOf="@+id/oneBrewGrindLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/oneBrewBeansKindText" />

        <TextView
            android:id="@+id/oneBrewBeansUseLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/oneBrewBeanUse"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oneBrewGrindLabel" />

        <SeekBar
            android:id="@+id/oneBrewBeansUseBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="10"
            android:progress="3"
            app:layout_constraintBottom_toBottomOf="@+id/oneBrewBeansUseLabel"
            app:layout_constraintEnd_toEndOf="@+id/oneBrewMethodText"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/oneBrewBeansKindText" />

        <TextView
            android:id="@+id/oneBrewCupsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/oneBrewCupsLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oneBrewBeansUseLabel" />

        <SeekBar
            android:id="@+id/oneBrewCupsBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="5"
            android:progress="3"
            app:layout_constraintBottom_toBottomOf="@+id/oneBrewCupsLabel"
            app:layout_constraintEnd_toEndOf="@+id/oneBrewBeansUseBar"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/oneBrewBeansKindText" />

        <TextView
            android:id="@+id/oneBrewTempLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/oneBrewTemp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oneBrewCupsLabel" />

        <SeekBar
            android:id="@+id/oneBrewTempBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="3"
            app:layout_constraintBottom_toBottomOf="@+id/oneBrewTempLabel"
            app:layout_constraintEnd_toEndOf="@+id/oneBrewCupsBar"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/oneBrewBeansKindText" />

        <TextView
            android:id="@+id/oneBrewSteamLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/oneBrewSteam"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oneBrewTempLabel" />

        <SeekBar
            android:id="@+id/oneBrewSteamBar"
            style="@style/Widget.AppCompat.SeekBar.Discrete"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:max="60"
            android:progress="3"
            app:layout_constraintBottom_toBottomOf="@+id/oneBrewSteamLabel"
            app:layout_constraintEnd_toEndOf="@+id/oneBrewTempBar"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/oneBrewBeansKindText" />

        <TextView
            android:id="@+id/oneBrewMemoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/oneBrewMemoLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oneBrewSteamLabel" />

        <TextView
            android:id="@+id/oneBrewMemoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/oneBrewMemoLabel"
            app:layout_constraintBaseline_toBaselineOf="@+id/oneBrewMemoLabel"
            app:layout_constraintEnd_toStartOf="@+id/oneBrewCopyBtn"
            app:layout_constraintStart_toStartOf="@+id/oneBrewSteamBar" />

        <ImageView
            android:id="@+id/oneBrewImage"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/drink" />

        <RatingBar
            android:id="@+id/oneBrewRatingBar"
            style="@android:style/Widget.Material.Light.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:numStars="5"
            android:rating="3"
            android:stepSize="0.5"
            app:layout_constraintBottom_toBottomOf="@+id/oneBrewRatingLabel"
            app:layout_constraintStart_toStartOf="@+id/oneBrewBeansKindText" />

        <TextView
            android:id="@+id/oneBrewRatingLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="@string/oneBrewResultLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oneBrewDateText" />

        <Button
            android:id="@+id/oneBrewEditBtn"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            android:background="@android:drawable/btn_default_small"
            android:text="@string/editText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/oneBrewCopyBtn" />

        <Button
            android:id="@+id/oneBrewCopyBtn"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:background="@android:drawable/btn_default_small"
            android:text="@string/copyText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/oneBrewEditBtn"
            app:layout_constraintTop_toBottomOf="@+id/oneBrewSteamBar" />

        <TextView
            android:id="@+id/oneBrewMethodText"
            android:layout_width="180sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="ドリップ"
            app:layout_constraintBaseline_toBaselineOf="@+id/oneBrewMethodLabel"
            app:layout_constraintStart_toEndOf="@+id/oneBrewMethodLabel" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
