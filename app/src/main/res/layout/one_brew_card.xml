<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/cardColor"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/oneBrewDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="2020年4月1日 10時00分"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/oneBrewMethodLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="@string/oneBrewMethodLabel"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oneBrewDateText" />

        <TextView
            android:id="@+id/oneBrewBeansLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="@string/oneBrewBeanLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oneBrewMethodLabel" />

        <TextView
            android:id="@+id/oneBrewBeansKindText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="豆のなまえ"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintBaseline_toBaselineOf="@+id/oneBrewBeansLabel"
            app:layout_constraintEnd_toStartOf="@+id/oneBrewBeansPassText"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/oneBrewBeansLabel"
            app:layout_constraintStart_toStartOf="@+id/oneBrewMethodText" />

        <TextView
            android:id="@+id/oneBrewBeansPassText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="7日経過"
            app:layout_constraintBaseline_toBaselineOf="@+id/oneBrewBeansKindText"
            app:layout_constraintEnd_toEndOf="@+id/oneBrewImage"
            app:layout_constraintEnd_toStartOf="@+id/oneBrewImage"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/oneBrewBeansKindText" />

        <TextView
            android:id="@+id/oneBrewBeansGrindLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="@string/oneBrewGrind"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oneBrewCupsLabel" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/brewEditCupBar"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:paddingLeft="5sp"
            android:paddingEnd="4sp"
            app:isb_clear_default_padding="true"
            app:isb_indicator_color="@android:color/holo_red_light"
            app:isb_indicator_text_color="@android:color/white"
            app:isb_indicator_text_size="10sp"
            app:isb_max="5"
            app:isb_min="1"
            app:isb_only_thumb_draggable="false"
            app:isb_progress="3"
            app:isb_seek_smoothly="false"
            app:isb_show_indicator="circular_bubble"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_color="@android:color/holo_red_light"
            app:isb_thumb_size="10sp"
            app:isb_tick_marks_color="@drawable/selector_colors"
            app:isb_tick_marks_ends_hide="false"
            app:isb_tick_marks_size="7sp"
            app:isb_tick_marks_swept_hide="false"
            app:isb_tick_texts_array="@array/grind_labels"
            app:isb_tick_texts_color="@android:color/black"
            app:isb_tick_texts_size="10sp"
            app:isb_ticks_count="5"
            app:isb_track_background_color="#dddddd"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="@android:color/holo_red_light"
            app:isb_track_progress_size="4dp"
            app:isb_track_rounded_corners="false"
            app:isb_user_seekable="false"
            app:layout_constraintStart_toEndOf="@+id/oneBrewBeansGrindLabel"
            app:layout_constraintTop_toTopOf="@+id/oneBrewBeansGrindLabel" />

        <TextView
            android:id="@+id/oneBrewBeansUseLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/oneBrewBeanUse"
            app:layout_constraintStart_toStartOf="@+id/oneBrewSteamLabel"
            app:layout_constraintTop_toTopOf="@+id/oneBrewBeansGrindLabel" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/oneBrewBeansUseBar"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:paddingLeft="5sp"
            android:paddingEnd="4sp"
            app:isb_clear_default_padding="true"
            app:isb_indicator_color="@android:color/holo_red_light"
            app:isb_indicator_text_color="@android:color/white"
            app:isb_indicator_text_size="10sp"
            app:isb_max="60"
            app:isb_min="0"
            app:isb_only_thumb_draggable="false"
            app:isb_progress="30"
            app:isb_seek_smoothly="false"
            app:isb_show_indicator="circular_bubble"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_color="@android:color/holo_red_light"
            app:isb_thumb_size="10sp"
            app:isb_tick_marks_color="@drawable/selector_colors"
            app:isb_tick_marks_ends_hide="false"
            app:isb_tick_marks_size="7sp"
            app:isb_tick_marks_swept_hide="false"
            app:isb_tick_texts_color="@android:color/black"
            app:isb_tick_texts_size="10sp"
            app:isb_ticks_count="7"
            app:isb_track_background_color="#dddddd"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="@android:color/holo_red_light"
            app:isb_track_progress_size="4dp"
            app:isb_track_rounded_corners="false"
            app:isb_user_seekable="false"
            app:layout_constraintStart_toEndOf="@+id/oneBrewSteamLabel"
            app:layout_constraintTop_toTopOf="@+id/oneBrewTempLabel" />

        <TextView
            android:id="@+id/oneBrewCupsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/oneBrewCupsLabel"
            app:layout_constraintStart_toStartOf="@+id/oneBrewMethodLabel"
            app:layout_constraintTop_toBottomOf="@+id/oneBrewBeansLabel" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/oneBrewCupsBar"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5sp"
            android:paddingEnd="5sp"
            app:isb_clear_default_padding="true"
            app:isb_indicator_color="@android:color/holo_red_light"
            app:isb_indicator_text_color="@android:color/white"
            app:isb_indicator_text_size="10sp"
            app:isb_max="5"
            app:isb_min="1"
            app:isb_only_thumb_draggable="false"
            app:isb_progress="1"
            app:isb_seek_smoothly="false"
            app:isb_show_indicator="circular_bubble"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_color="@android:color/holo_red_light"
            app:isb_thumb_size="10sp"
            app:isb_tick_marks_color="@drawable/selector_colors"
            app:isb_tick_marks_ends_hide="false"
            app:isb_tick_marks_size="7sp"
            app:isb_tick_marks_swept_hide="false"
            app:isb_tick_texts_color="@android:color/black"
            app:isb_tick_texts_size="10sp"
            app:isb_ticks_count="5"
            app:isb_track_background_color="#dddddd"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="@android:color/holo_red_light"
            app:isb_track_progress_size="4dp"
            app:isb_track_rounded_corners="false"
            app:isb_user_seekable="false"
            app:layout_constraintStart_toStartOf="@+id/oneBrewMethodText"
            app:layout_constraintTop_toTopOf="@+id/oneBrewCupsLabel" />

        <TextView
            android:id="@+id/oneBrewTempLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:text="@string/oneBrewTemp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oneBrewBeansGrindLabel" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/oneBrewTempBar"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:paddingLeft="5sp"
            android:paddingEnd="4sp"
            app:isb_clear_default_padding="true"
            app:isb_indicator_color="@android:color/holo_red_light"
            app:isb_indicator_text_color="@android:color/white"
            app:isb_indicator_text_size="10sp"
            app:isb_max="100"
            app:isb_min="0"
            app:isb_only_thumb_draggable="false"
            app:isb_progress="80"
            app:isb_seek_smoothly="false"
            app:isb_show_indicator="circular_bubble"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_color="@android:color/holo_red_light"
            app:isb_thumb_size="10sp"
            app:isb_tick_marks_color="@drawable/selector_colors"
            app:isb_tick_marks_ends_hide="false"
            app:isb_tick_marks_size="7sp"
            app:isb_tick_marks_swept_hide="false"
            app:isb_tick_texts_color="@android:color/black"
            app:isb_tick_texts_size="10sp"
            app:isb_ticks_count="6"
            app:isb_track_background_color="#dddddd"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="@android:color/holo_red_light"
            app:isb_track_progress_size="4dp"
            app:isb_track_rounded_corners="false"
            app:isb_user_seekable="false"
            app:layout_constraintStart_toStartOf="@+id/brewEditCupBar"
            app:layout_constraintTop_toTopOf="@+id/oneBrewTempLabel" />

        <TextView
            android:id="@+id/oneBrewSteamLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/oneBrewSteam"
            app:layout_constraintStart_toEndOf="@+id/oneBrewTempBar"
            app:layout_constraintTop_toTopOf="@+id/oneBrewTempLabel" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/oneBrewSteamBar"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:paddingLeft="5sp"
            android:paddingEnd="4sp"
            app:isb_clear_default_padding="true"
            app:isb_indicator_color="@android:color/holo_red_light"
            app:isb_indicator_text_color="@android:color/white"
            app:isb_indicator_text_size="10sp"
            app:isb_max="60"
            app:isb_min="0"
            app:isb_only_thumb_draggable="false"
            app:isb_progress="30"
            app:isb_seek_smoothly="false"
            app:isb_show_indicator="circular_bubble"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_color="@android:color/holo_red_light"
            app:isb_thumb_size="10sp"
            app:isb_tick_marks_color="@drawable/selector_colors"
            app:isb_tick_marks_ends_hide="false"
            app:isb_tick_marks_size="7sp"
            app:isb_tick_marks_swept_hide="false"
            app:isb_tick_texts_color="@android:color/black"
            app:isb_tick_texts_size="10sp"
            app:isb_ticks_count="7"
            app:isb_track_background_color="#dddddd"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="@android:color/holo_red_light"
            app:isb_track_progress_size="4dp"
            app:isb_track_rounded_corners="false"
            app:isb_user_seekable="false"
            app:layout_constraintStart_toEndOf="@+id/oneBrewSteamLabel"
            app:layout_constraintTop_toTopOf="@+id/oneBrewBeansUseLabel" />

        <TextView
            android:id="@+id/oneBrewMemoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="24dp"
            android:text="@string/oneBrewMemoLabel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oneBrewTempLabel" />

        <TextView
            android:id="@+id/oneBrewMemoText"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/oneBrewMemoLabel"
            app:layout_constraintBaseline_toBaselineOf="@+id/oneBrewMemoLabel"
            app:layout_constraintStart_toStartOf="@+id/oneBrewTempBar" />

        <ImageView
            android:id="@+id/oneBrewImage"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/drink" />

        <RatingBar
            android:id="@+id/oneBrewRatingBar"
            style="@android:style/Widget.Material.Light.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:numStars="5"
            android:progressBackgroundTint="@color/ratingBackColor"
            android:progressTint="@color/ratingColor"
            android:rating="3"
            android:stepSize="0.5"
            app:layout_constraintStart_toEndOf="@+id/oneBrewDateText"
            app:layout_constraintTop_toTopOf="@+id/oneBrewDateText" />

        <Button
            android:id="@+id/oneBrewEditBtn"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            android:background="@android:drawable/btn_default_small"
            android:text="@string/editText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/oneBrewCopyBtn" />

        <Button
            android:id="@+id/oneBrewCopyBtn"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            android:background="@android:drawable/btn_default_small"
            android:text="@string/copyText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/oneBrewEditBtn" />

        <TextView
            android:id="@+id/oneBrewMethodText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="抽出方法"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintBaseline_toBaselineOf="@+id/oneBrewMethodLabel"
            app:layout_constraintStart_toEndOf="@+id/oneBrewMethodLabel" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
