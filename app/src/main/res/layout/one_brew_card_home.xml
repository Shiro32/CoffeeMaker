<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/cardColor"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/oneBrewImage"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:adjustViewBounds="true"
            app:layout_constraintBottom_toTopOf="@+id/oneBrewMethodText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/machine2_160" />

        <TextView
            android:id="@+id/oneBrewDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:text="2020年4月1日 10時00分"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/oneBrewBeansLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/oneBrewBeanLabel"
            android:textAlignment="textEnd"
            app:layout_constraintEnd_toEndOf="@+id/oneBrewMemoLabel"
            app:layout_constraintTop_toBottomOf="@+id/oneBrewDateText" />

        <TextView
            android:id="@+id/oneBrewBeansKindText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="豆のなまえ"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/oneBrewBeansLabel"
            app:layout_constraintEnd_toStartOf="@+id/oneBrewMethodText"
            app:layout_constraintStart_toEndOf="@+id/oneBrewBeansLabel" />

        <TextView
            android:id="@+id/oneBrewBeansGrindLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="@string/oneBrewGrind"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oneBrewBeansLabel" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/oneBrewGrindBar"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:paddingLeft="6sp"
            android:paddingEnd="10sp"
            app:isb_clear_default_padding="true"
            app:isb_indicator_color="@color/beansColor"
            app:isb_indicator_text_color="@android:color/white"
            app:isb_indicator_text_size="10sp"
            app:isb_max="5"
            app:isb_min="1"
            app:isb_only_thumb_draggable="false"
            app:isb_progress="3"
            app:isb_seek_smoothly="false"
            app:isb_show_indicator="circular_bubble"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_color="@color/beansColor"
            app:isb_thumb_size="12sp"
            app:isb_tick_marks_color="#dddddd"
            app:isb_tick_marks_ends_hide="false"
            app:isb_tick_marks_size="7sp"
            app:isb_tick_marks_swept_hide="false"
            app:isb_tick_texts_array="@array/grind_labels"
            app:isb_tick_texts_color="@android:color/black"
            app:isb_tick_texts_size="10sp"
            app:isb_ticks_count="5"
            app:isb_track_background_color="#dddddd"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="#dddddd"
            app:isb_track_progress_size="4dp"
            app:isb_track_rounded_corners="false"
            app:isb_user_seekable="false"
            app:layout_constraintStart_toEndOf="@+id/oneBrewBeansGrindLabel"
            app:layout_constraintTop_toTopOf="@+id/oneBrewBeansGrindLabel" />

        <TextView
            android:id="@+id/oneBrewBeansUseLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/oneBrewBeanUse"
            app:layout_constraintStart_toStartOf="@+id/oneBrewSteamLabel"
            app:layout_constraintTop_toTopOf="@+id/oneBrewBeansGrindLabel" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/oneBrewSteamBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:paddingLeft="6sp"
            android:paddingEnd="10sp"
            app:isb_clear_default_padding="true"
            app:isb_indicator_color="@color/beansColor"
            app:isb_indicator_text_color="@android:color/white"
            app:isb_indicator_text_size="10sp"
            app:isb_max="120"
            app:isb_min="0"
            app:isb_only_thumb_draggable="false"
            app:isb_progress="30"
            app:isb_seek_smoothly="false"
            app:isb_show_indicator="circular_bubble"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_color="@color/beansColor"
            app:isb_thumb_size="12sp"
            app:isb_tick_marks_color="#dddddd"
            app:isb_tick_marks_ends_hide="false"
            app:isb_tick_marks_size="7sp"
            app:isb_tick_marks_swept_hide="false"
            app:isb_tick_texts_color="@android:color/black"
            app:isb_tick_texts_size="10sp"
            app:isb_ticks_count="5"
            app:isb_track_background_color="#dddddd"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="#dddddd"
            app:isb_track_progress_size="4dp"
            app:isb_track_rounded_corners="false"
            app:isb_user_seekable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/oneBrewSteamLabel"
            app:layout_constraintTop_toTopOf="@+id/oneBrewTempLabel" />

        <TextView
            android:id="@+id/oneBrewTempLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="12dp"
            android:text="@string/oneBrewTemp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oneBrewBeansGrindLabel" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/oneBrewTempBar"
            android:layout_width="145dp"
            android:layout_height="wrap_content"
            android:paddingLeft="6sp"
            android:paddingEnd="10sp"
            app:isb_clear_default_padding="true"
            app:isb_indicator_color="@color/beansColor"
            app:isb_indicator_text_color="@android:color/white"
            app:isb_indicator_text_size="10sp"
            app:isb_max="100"
            app:isb_min="0"
            app:isb_only_thumb_draggable="false"
            app:isb_progress="80"
            app:isb_seek_smoothly="false"
            app:isb_show_indicator="circular_bubble"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_color="@color/beansColor"
            app:isb_thumb_size="12sp"
            app:isb_tick_marks_color="#dddddd"
            app:isb_tick_marks_ends_hide="false"
            app:isb_tick_marks_size="7sp"
            app:isb_tick_marks_swept_hide="false"
            app:isb_tick_texts_color="@android:color/black"
            app:isb_tick_texts_size="10sp"
            app:isb_ticks_count="6"
            app:isb_track_background_color="#dddddd"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="#dddddd"
            app:isb_track_progress_size="4dp"
            app:isb_track_rounded_corners="false"
            app:isb_user_seekable="false"
            app:layout_constraintStart_toEndOf="@+id/oneBrewTempLabel"
            app:layout_constraintTop_toTopOf="@+id/oneBrewTempLabel" />

        <TextView
            android:id="@+id/oneBrewSteamLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="@string/oneBrewSteam"
            app:layout_constraintStart_toEndOf="@+id/oneBrewTempBar"
            app:layout_constraintTop_toTopOf="@+id/oneBrewTempLabel" />

        <com.warkiz.widget.IndicatorSeekBar
            android:id="@+id/oneBrewBeansUseBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:paddingLeft="6sp"
            android:paddingEnd="10sp"
            app:isb_clear_default_padding="true"
            app:isb_indicator_color="@color/beansColor"
            app:isb_indicator_text_color="@android:color/white"
            app:isb_indicator_text_size="10sp"
            app:isb_max="60"
            app:isb_min="0"
            app:isb_only_thumb_draggable="false"
            app:isb_progress="30"
            app:isb_seek_smoothly="false"
            app:isb_show_indicator="circular_bubble"
            app:isb_show_tick_marks_type="oval"
            app:isb_show_tick_texts="true"
            app:isb_thumb_color="@color/beansColor"
            app:isb_thumb_size="12sp"
            app:isb_tick_marks_color="#dddddd"
            app:isb_tick_marks_ends_hide="false"
            app:isb_tick_marks_size="7sp"
            app:isb_tick_marks_swept_hide="false"
            app:isb_tick_texts_color="@android:color/black"
            app:isb_tick_texts_size="10sp"
            app:isb_ticks_count="7"
            app:isb_track_background_color="#dddddd"
            app:isb_track_background_size="2dp"
            app:isb_track_progress_color="#dddddd"
            app:isb_track_progress_size="4dp"
            app:isb_track_rounded_corners="false"
            app:isb_user_seekable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/oneBrewSteamLabel"
            app:layout_constraintTop_toTopOf="@+id/oneBrewBeansUseLabel" />

        <TextView
            android:id="@+id/oneBrewMemoLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="@string/oneBrewMemoLabel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/oneBrewTempBar" />

        <TextView
            android:id="@+id/oneBrewMemoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="@string/oneBrewMemoLabel"
            app:layout_constraintBaseline_toBaselineOf="@+id/oneBrewMemoLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/oneBrewBeansKindText" />

        <RatingBar
            android:id="@+id/oneBrewRatingBar"
            style="@android:style/Widget.Material.Light.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:numStars="5"
            android:progressBackgroundTint="@color/ratingBackColor"
            android:progressTint="@color/ratingColor"
            android:rating="3"
            android:stepSize="0.5"
            app:layout_constraintBottom_toBottomOf="@+id/oneBrewDateText"
            app:layout_constraintStart_toEndOf="@+id/oneBrewDateText"
            app:layout_constraintTop_toTopOf="@+id/oneBrewDateText" />

        <TextView
            android:id="@+id/oneBrewMethodText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="抽出方法"
            android:textAlignment="textEnd"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/oneBrewBeansUseBar"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
